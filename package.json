{
	"name": "webscraper-ecommerce",
	"version": "0.2.0",
	"description": "",
	"scripts": {
		"prepare": "husky install",
		"format:check": "prettier . --ignore-path .gitignore --check",
		"format:fix": "prettier . --ignore-path .gitignore --write",
		"lint": "eslint --ext .ts,.js .",
		"type:check": "tsc",
		"validate": "concurrently \"pnpm run lint\" \"pnpm type:check\" \"pnpm format:check\"",
		"commit": "git-cz -S",
		"deploy:cloud": "sls deploy --verbose",
		"deploy:local": "sls offline --noTimeout"
	},
	"devDependencies": {
		"@commitlint/cli": "^18.4.3",
		"@commitlint/config-conventional": "^18.4.3",
		"@types/aws-lambda": "^8.10.129",
		"@types/follow-redirects": "^1.14.4",
		"@types/uuid": "^9.0.7",
		"@typescript-eslint/eslint-plugin": "^6.4.0",
		"commitizen": "^4.3.0",
		"concurrently": "^8.2.2",
		"cz-conventional-changelog": "^3.3.0",
		"esbuild": "^0.19.7",
		"esbuild-node-externals": "^1.11.0",
		"eslint": "^8.0.1",
		"eslint-config-prettier": "^9.0.0",
		"eslint-config-standard-with-typescript": "^40.0.0",
		"eslint-plugin-import": "^2.25.2",
		"eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
		"eslint-plugin-promise": "^6.0.0",
		"eslint-plugin-security": "^1.7.1",
		"husky": "^8.0.3",
		"prettier": "^3.1.0",
		"serverless-esbuild": "^1.49.0",
		"serverless-offline": "^13.3.0",
		"serverless-plugin-typescript": "^2.1.5",
		"typescript": "^5.3.2"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"lint-staged": {
		"*.ts": "eslint --cache --fix",
		"*.{js,css,md}": "prettier --write"
	},
	"dependencies": {
		"@sparticuz/chromium": "^119.0.0",
		"aws-lambda": "^1.0.7",
		"aws-sdk": "^2.1503.0",
		"puppeteer-core": "^21.5.2",
		"serverless-dynamodb-local": "^0.2.40",
		"uuid": "^9.0.1"
	}
}
